<title>Edit Site Info</title>
<h1>Edit Site Info</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@site) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
		
      	<div>
      		<%= f.hidden_field :user_id, value: @current_user.id %>
      	</div>

		<div class="left">
	      	<%= f.label :site_name %>
	      	<%= f.text_field :site_name %>
	  	</div>

		<div class="right">
    		<%= f.label :address %>
    		<%= f.text_field :address %>
    	</div>

	  	<div class="left">
      		<%= f.label :company %>
      		<%= f.text_field :company %>
  		</div>

      	<div class="right">
      		<%= f.label :city %>
      		<%= f.text_field :city %>
  		</div>

  		<div class="left">
      		<%= f.label :industry_type %>
      		<%= f.select :industry_type, ['Commercial'] %>
	  		<!--<%#= f.select :industry_type, ['Commercial', 'Manufacturing'] %>-->      
      	</div>

		<div class="right">
      		<%= f.label :state %>
      		<%= f.text_field :state %>
      	</div>

      	<div class="left">
      		<%= f.label :building_type %>
      		<%= f.select :building_type, ['Education', 'Food Sales', 'Food Service', 'Health Care (Inpatient)', 'Health Care (Outpatient)', 'Lodging', 'Mercantile (Retail Other Than Mall)', 'Mercantile (Enclosed and Strip Malls)', 'Office', 'Public Assembly', 'Public Order and Safety', 'Religious Worship', 'Service', 'Warehouse and Storage', 'Other', 'Vacant' ] %>
      	</div>
		
		<div class="right">
      		<%= f.label :zip_code %>
      		<%= f.text_field :zip_code %>
    	</div>

      	<br>
      	<br>

		<div class="center">
      		<%= f.label :description %>
      		<%= f.text_field :description %>
      	</div>

    	<br>

      	<div class="left">
      		<%= f.label :phases %>
      		<%= f.select :phases, ['3-phase','1-phase'] %>
      	</div>

    	<div class="right">
      		<%= f.label :square_feet %>
      		<%= f.text_field :square_feet %>
     	</div>

     	<br> <!-- enters a blank line, ie: line break -->
     	<br>
     			
      <%= f.submit "Update Site Info", class: "btn btn-med btn-custom" %>
    <% end %>

  </div>
</div>